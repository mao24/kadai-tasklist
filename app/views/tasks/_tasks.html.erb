<ul class="media-list">
  <% @tasks.each do |task| %>
    <% user = task.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%#= link_to user.name, user_path(user) %> <!-- <span class="text-muted">posted at <%#= task.created_at %></span> -->
          <%= link_to task.id.to_s+" 編集", edit_task_path(task.id), class:'btn btn-primary btn-xs' %> :
          <%= link_to "削除", task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class:'btn btn-danger btn-xs'  %>
        </div>
        <div>
          <p>Content: <%= task.content %> : Status :<%= task.status %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate @tasks %>
</ul>